                <!-- Expandable Textfield -->
                <form action="#">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable" style="width: 500px;">
                        <label class="mdl-button mdl-js-button mdl-button--icon" for="comment">
                            <i class="material-icons">chat</i>
                        </label>
                        <div class="mdl-textfield__expandable-holder">
                            <input class="mdl-textfield__input" type="text" id="comment">
                            <label class="mdl-textfield__label" for="sample-expandable">Expandable Input</label>
